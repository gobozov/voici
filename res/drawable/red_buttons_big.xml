<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/dark_red"/>
            <corners
                    android:radius="10dp" />
            <padding
                    android:left="20dp"
                    android:top="20dp"
                    android:right="20dp"
                    android:bottom="20dp" />

            <stroke android:width="2px" android:color="@color/darkest_red" />

        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/light_red"/>
            <corners
                    android:radius="10dp" />
            <padding
                    android:left="20dp"
                    android:top="20dp"
                    android:right="20dp"
                    android:bottom="20dp" />
            <stroke android:width="2px" android:color="@color/darkest_red" />
        </shape>
    </item>


</selector>